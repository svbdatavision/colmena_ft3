# Archivo de configuración de ambiente para FastTrack 3.0
# Copiar este archivo como .env y completar con valores reales

# ========================================
# CREDENCIALES SNOWFLAKE (OBLIGATORIAS)
# ========================================
SF_USER=your_snowflake_user
SF_PASSWORD=your_snowflake_password
SF_ACCOUNT=COLMENA-ISAPRE_COLMENA
SF_WAREHOUSE=P_ML
SF_DATABASE=OPX
SF_SCHEMA=P_DDV_OPX_MDPREDICTIVO
SF_ROLE=EX_ML

# ========================================
# CONFIGURACIÓN DE PROCESAMIENTO
# ========================================
# Número de días a procesar por defecto (si no se especifica)
DEFAULT_DAYS_BACK=1

# Optimización de umbrales (yes/no)
OPTIMIZE_THRESHOLDS=no

# Tasa de reversión COMPIN (0.0 a 1.0)
COMPIN_REVERSION_RATE=0.5

# Costo de revisión manual en pesos
MANUAL_REVIEW_COST=5000

# ========================================
# NOTIFICACIONES (OPCIONAL)
# ========================================
# Webhook de Slack para alertas
SLACK_WEBHOOK=

# Email para reportes (requiere configurar SMTP)
ALERT_EMAIL=

# ========================================
# CONFIGURACIÓN SMTP (OPCIONAL)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=alertas@colmena.cl

# ========================================
# CONFIGURACIÓN DE LOGS
# ========================================
# Nivel de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Días para retener logs
LOG_RETENTION_DAYS=30

# ========================================
# CONFIGURACIÓN DE RECURSOS
# ========================================
# Límite de memoria para el contenedor (en MB)
MEMORY_LIMIT=4096

# Límite de CPU (número de cores)
CPU_LIMIT=2

# ========================================
# CONFIGURACIÓN DE TIMEZONE
# ========================================
TZ=America/Santiago

# ========================================
# PATHS PERSONALIZADOS (OPCIONAL)
# ========================================
# Path donde se guardan los modelos
MODELS_PATH=/app/models

# Path donde se guardan los resultados
RESULTS_PATH=/app/results

# Path donde se guardan los logs
LOGS_PATH=/app/logs

# ========================================
# MODO DEBUG (DESARROLLO SOLAMENTE)
# ========================================
# Activar modo debug (yes/no) - NO usar en producción
DEBUG_MODE=no

# Mostrar queries SQL en logs (yes/no)
SHOW_SQL_QUERIES=no